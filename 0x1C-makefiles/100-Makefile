CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school

all: $(NAME)

$(NAME): $(OBJ)
    $(CC) $(CFLAGS) -o $@ $^

clean:
    $(RM) $(OBJ) $(NAME)

oclean:
    $(RM) $(OBJ)

fclean: clean
    $(RM) $(NAME)

re: fclean all

.PHONY: all clean oclean fclean re

%.o: %.c
    $(CC) $(CFLAGS) -o $@ -c $<

$(OBJ): m.h

